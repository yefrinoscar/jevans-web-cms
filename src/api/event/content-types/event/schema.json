{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "title": {
      "type": "text"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "events"
    },
    "description": {
      "type": "text"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Evento",
        "Conferencia",
        "Workshop"
      ]
    },
    "content": {
      "type": "blocks"
    },
    "registerUrl": {
      "type": "string",
      "regex": "^(https?:\\/\\/)([\\w-]+\\.)+[\\w-]+(\\/[\\w\\-._~:/?#[\\]@!$&'()*+,;=]*)?$"
    },
    "date": {
      "type": "datetime"
    },
    "place": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
